    <!-- Main Content -->
    <main class="flex-1">
        <div class="container mx-auto px-4">
            <!-- Welcome Section -->
            <section class="welcome-section text-center py-12 mb-8">
                <div class="max-w-4xl mx-auto">
                    <div class="flex justify-center mb-6">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 rounded-xl flex items-center justify-center shadow-lg">
                                <span class="text-white font-bold text-3xl tracking-wide">F</span>
