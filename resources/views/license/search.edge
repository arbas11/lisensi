<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>License Search - Forosta Jaya Makmur</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .search-input {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        
        .search-input:focus {
            background: white;
            transform: translateY(-2px);
        }
        
        .search-button {
            background: linear-gradient(135deg, #10b981, #059669);
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }
        
        .search-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }
        
        .error-message {
            background: rgba(239, 68, 68, 0.9);
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    @include('components/license-navbar')

    <!-- Main Content -->
    <main class="flex-1">
        <div class="container mx-auto px-4">
            <section class="search-section text-center py-16">
                <h1 class="search-title text-5xl md:text-6xl font-bold text-white mb-4 text-shadow-lg">
                    License Search
                </h1>
                <p class="search-subtitle text-xl text-blue-100 mb-12 max-w-2xl mx-auto">
                    Enter your license key to view details and access your software license information
                </p>
                
                <form class="search-form max-w-lg mx-auto mb-8" method="GET" action="/license/search" onsubmit="return handleSearch(event)">
                    <input 
                        type="text" 
                        name="key" 
                        id="licenseKey"
                        class="search-input w-full px-6 py-4 text-lg border-0 rounded-2xl outline-none transition-all duration-300 font-mono text-center placeholder-gray-500"
                        placeholder="Enter License Key"
                        value="{{ searchKey || '' }}"
                        required
                        autocomplete="off"
                    >
                    <button type="submit" class="search-button w-full mt-6 py-4 px-8 text-lg font-semibold text-white rounded-2xl cursor-pointer transition-all duration-300">
                        Search License
                    </button>
                </form>

                <script>
                    function handleSearch(event) {
                        event.preventDefault();
                        const licenseKey = document.getElementById('licenseKey').value.trim();
                        if (licenseKey) {
                            window.location.href = `/license/${encodeURIComponent(licenseKey)}`;
                        }
                        return false;
                    }
                </script>

                @if(error)
                    <div class="error-message max-w-lg mx-auto text-white p-4 rounded-xl mb-6">
                        {{ error }}
                    </div>
                @endif

            </section>
        </div>
    </main>
</body>
</html>
