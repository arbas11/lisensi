                            <!-- Status Badge -->
                            <div class="flex items-center justify-between">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium {{ item.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                    {{ item.isActive ? 'Active' : 'Inactive' }}
                                </span>
                                
                                <!-- View Details Button -->
                                <a href="/admin/support-items/{{ item.id }}" class="text-blue-600 hover:text-blue-700 text-sm font-medium transition-colors">
                                    View Details â†’
                                </a>
